@import '../tools.styl'
@import '../stylus/index.styl'
.wrapper
  width 100vw
  height 100vh
  overflow hidden
  .content
    flex-center()
    flex-direction column
    align-items center
    justify-content flex-start
    .icon
      margin-top 1.4rem
      width 162px
      height 162px
      &.suc
        bg-img('../../images/footPrint/suc_icon.png')
      &.fal
        bg-img('../../images/footPrint/fal_icon.png')
    h4
      font-size 40px
      font-family PingFang SC
      font-weight bold
      color rgba(35, 35, 35, 1)
      line-height 20px
      margin-top: .4rem
    p 
      width 80%
      font-size 28px
      font-family PingFang SC
      font-weight 500
      color rgba(159, 159, 159, 1)
      line-height 40px
      margin-top: .4rem
      text-align center
    .close
      position: absolute
      full-img('../../images/footPrint/close.png')
      bottom 3rem
