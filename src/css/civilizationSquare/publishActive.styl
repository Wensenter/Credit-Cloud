@import '../tools.styl'
@import '../stylus/index.styl'
.content
    padding-top .32rem /* 24/75 */
    padding-bottom .533333rem /* 40/75 */
    background #F7F7F7
    .swiper-container
        &>.swiper-wrapper
            text-align center
            &>.swiper-slide>a>img
                width 9.306667rem /* 698/75 */
                height 4.346667rem /* 326/75 */
    .deatilList
        background #ffffff
        width 8.293333rem /* 622/75 */
        margin 0 auto 
        padding 0 .48rem /* 36/75 */0 .52rem /* 39/75 */
        &>li
            height 1.56rem /* 117/75 */
            border-bottom 1px solid #F3F6F7
            display flex
            justify-content flex-start
            align-items center
            font-weight 500
            font-size .4rem /* 30/75 */
            position relative
            &>input
                border 0
                outline none 
                color #D7D7D7
                background transparent
                flex 1
                &::-webkit-input-placeholder
                    color #D7D7D7
            .title
                color #333333
                margin-right .133333rem /* 10/75 */
            &>label>i
                position absolute
                right 1.2rem /* 90/75 */
                bottom .52rem /* 39/75 */
                icon_bg('../../images/civilizationSquare/date_icon.png',.533333rem /* 40/75 */)
    &>button
        border 0 
        outline none
        icon_bg('../../images/civilizationSquare/publish_button_icon.png',6.24rem /* 468/75 */,height 1.093333rem /* 82/75 */)
        width 6.24rem /* 468/75 */
        height 1.093333rem /* 82/75 */
        margin .52rem /* 39/75 */ auto 0
.bg
    display none
    background rgba(0,0,0,0.5)
    position fixed
    top 0 
    left 0
    width 100%
    height 100%
    z-index 15
    .publish_success
        width 7.2rem /* 540/75 */
        height 8rem /* 600/75 */
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
        &>img
            width 100%
            height 100%
        &>button
            border 0
            outline none
            icon_bg('../../images/civilizationSquare/understand_icon.png',5.013333rem /* 376/75 */,1.093333rem /* 82/75 */)
            position absolute
            left .986667rem /* 74/75 */
            bottom .546667rem /* 41/75 */