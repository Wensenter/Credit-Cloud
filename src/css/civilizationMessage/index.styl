@import '../tools.styl'
@import '../stylus/index.styl'
@import '../common_yl.styl'
.wrapper
  width 100vw
  height 100vh
  box-sizing border-box
  padding: .32rem /* 24/75 */
  background:rgba(247,247,247,1);
  overflow auto
  .all-message-head
    padding: .4rem /* 30/75 */ .48rem /* 36/75 */
    border-radius .266667rem /* 20/75 */
    .icon1
      width .64rem /* 48/75 */
      height @width
    .arrow
      width .4rem /* 30/75 */
      height @width
    p
      padding 0 0.2rem
      color: #333333
      font-size $fs-l
      font-weight:500;

.message_list_box
  padding .32rem /* 24/75 */ 0
  height 80%
  background:rgba(247,247,247,1)
  overflow auto
  .message_list
    border-radius: .266667rem /* 20/75 */
    padding 0 .533333rem /* 40/75 */
    box-shadow 0 .24rem /* 18/75 */ .32rem /* 24/75 */ 0 rgba(241,241,241,0.44)
    // height 80%
    .message_list_mesg
      margin auto
      font-size .346667rem /* 26/75 */
      color:rgba(178,178,178,1);
      text-align center
      padding .5rem 0
      font-weight:500;
    .message_list_item
      position relative
      border-bottom solid .013333rem /* 1/75 */ rgba(243,246,247,1)
      padding .533333rem /* 40/75 */ 0 /* 40/75 */
      img 
        width 1.12rem /* 84/75 */
        height @width
        border-radius: 50%
        object-fit cover
      .message_list_center
        padding 0 .266667rem /* 20/75 */
        h4
          font-size: $fs-l
          color: #333333
          font-weight:bold
        span
          font-size .346667rem /* 26/75 */
          font-weight:400;
      .message_list_right
        width 1.226667rem /* 92/75 */
        height 1.16rem /* 87/75 */
        border-radius: .08rem /* 6/75 */
        overflow hidden
        flex-center()
        img 
          width 100%
          height 100%
          object-fit: cover
          border-radius 0
        .text
          font-size: $fs-xxs
          multi-line($n = 2)