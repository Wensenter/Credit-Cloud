@import '../stylus/index.styl'
.wrapper
  min-height: 100vh
  padding-bottom: 40px
  background-color: #F4F5F5
  background-image: url('../../images/myPoints/banner.png')
  background-repeat: no-repeat
  background-size: 100%
  overflow: hidden
  .points-wrapper
    margin: 88px 275px 0 275px
    text-align: center
    .points-value
      font-size: 88px
      font-weight: 600
      color: rgba(255, 255, 255, 1)
    .points-title
      font-size: 30px
      font-weight: bold
      color: rgba(255, 255, 255, 1)
  .exchange-wrapper
    margin: 67px 25px 0 25px
    min-height: 300px
    background: rgba(255, 255, 255, 1)
    box-shadow: 0px 18px 24px 0px rgba(241, 241, 241, 0.44)
    border-radius: 20px
    .exchange-checkbox
      display: flex
      border-bottom: 0.5px solid rgba(237, 237, 237, 1)
      .check-btn
        display: flex
        justify-content: center
        align-items: center
        width: 50%
        height: 90px
        &:first-child
          border-radius: 20px 0px 0px 0px
        &:last-child
          border-radius: 0px 20px 0px 0px
        &.checked
          background: rgba(255, 231, 64, 1)
    .item-wrapper
      margin-top: 25px
      .title
        font-size: 30px
        font-weight: bold
        color: rgba(51, 51, 51, 1)
        single-line()
      .intro
        font-size: 24px
        font-weight: 500
        color: rgba(179, 179, 179, 1)
        margin-top: 20px
        word-break: break-all
    .check-items
      display: flex
      padding: 40px
      .img-wrapper
        position: relative
        flex: 0 0 150px
        margin-right: 20px
        width: 150px
        height: 150px
        background: rgba(255, 255, 255, 1)
        border: 1px solid rgba(237, 237, 237, 1)
        border-radius: 10px
        img
          width: 106px
          height: 112px
          border-radius: 10px
          absolute-center()
      .check-item
        margin-top: 25px
        flex: 0 0 140px
        text-align: center
        .check-points
          font-size: 22px
          font-weight: 600
          color: #333333
          text-align: center
          .red
            font-size: 30px
            font-weight: 700
            color: #F86C4F
        .btn-check
          margin-top: 15px
          full-img('../../images/myPoints/exchange.png')
