@import '../tools.styl'
@import '../stylus/index.styl'
.content
    min-height 100vh
    border-top .013333rem /* 1/75 */solid transparent
    background #F7F7F7
    .evaluate_sum
        margin-top .506667rem /* 38/75 */
        display flex
        flex-direction column
        justify-content flex-start
        align-items center
        .title
            display flex
            align-items center
            color #000000
            font-size .4rem /* 30/75 */
            font-weight bold
            i
                margin-right .253333rem /* 19/75 */
                icon_bg('../../images/footPrint/anonymous.png',.4rem /* 30/75 */)
        .text
            margin-top .266667rem /* 20/75 */
            color #333333
            font-size .266667rem /* 20/75 */
            text-align justify
    .evaluate_info
        width 8.293333rem /* 622/75 */
        display flex
        flex-direction column
        justify-content flex-start
        align-items center
        background #ffffff
        padding .533333rem /* 40/75 */
        margin .533333rem /* 40/75 */auto 0
        border-radius .266667rem /* 20/75 */
        // margin-bottom: 20px;
        .title
            color #B3B3B3
            display flex
            align-items center
            &:after,&:before
                content ' '
                width 3.2rem /* 240/75 */
                height .013333rem /* 1/75 */
                background #F3F6F7
            &:after
                margin-left .133333rem /* 10/75 */
            &:before
                margin-right .133333rem /* 10/75 */
        .stars 
            display flex
            margin-top .266667rem /* 20/75 */
            i
                margin-right .16rem /* 12/75 */
                &:last-child
                    margin 0
            .star
                icon_bg('../../images/footPrint/star_icon.png',.4rem /* 30/75 */)
            .unstar
                icon_bg('../../images/footPrint/unstar_icon.png',.4rem /* 30/75 */)
        .text 
            margin-top .533333rem /* 40/75 */
            color #333333
            font-size .4rem /* 30/75 */   
            font-weight 500 
            text-align justify
        .list_imgs
            padding-top: .163333rem /* 10/75 */
            .list_imgs_item
                object-fit cover
                margin-right .133333rem /* 10/75 */
                margin-bottom 0.13rem
                &:only-child
                    width 6.213333rem /* 466/75 */
                    // height 4.666667rem /* 350/75 */
                &:first-child:nth-last-child(2),&:first-child:nth-last-child(2) ~ .list_imgs_item,&:first-child:nth-last-child(4),&:first-child:nth-last-child(4) ~ .list_imgs_item
                    width 4.0rem /* 466/75 */
                    height 2.666667rem /* 350/75 */
                &:first-child:nth-last-child(3),&:first-child:nth-last-child(3) ~ .list_imgs_item
                    width 2.593333rem /* 202/75 */
                    height @width
                &:first-child:nth-last-child(5),&:first-child:nth-last-child(5) ~ .list_imgs_item
                    width 2.593333rem /* 202/75 */
                    height @width
    button
        border 0
        outline none
        margin 2.84rem /* 663/75 */ auto 0
        icon_bg('../../images/footPrint/submit_icon.png',6.24rem /* 468/75 */,1.093333rem /* 82/75 */)  