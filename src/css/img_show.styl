@import './stylus/mixins.styl'
.imgs_mask_box
  position absolute
  top 0
  left 0
  width 100vw
  height 100vh
  background-color: rgba(1,1,1,.8)
  z-index 99
  display none
  .imgs_content_box
    position relative
    top 0
    left 0
    width 100%
    height 100%
    flex-center()
    .swiper-container
      width 100%
      height 100%
      .swiper-slide
        flex-center()
        img
          max-width 100%
          max-height 90%
      .swiper-pagination-bullet-active
          background #ffffff
  .imgs_show_content
    width 100vw
    height 100vh
    // overflow-y: hidden
    overflow-x scroll
    white-space nowrap
    .img_mask_item
      display inline-block
      width 100vw
      height 100vh
      img
        max-width 100%
        max-height 90%