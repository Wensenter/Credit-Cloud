@import '../tools.styl'
@import '../stylus/mixins.styl'
  .wrapper
    width 100vw
    height 100vh
    padding-bottom 8vh
    box-sizing border-box
    background-color $c_lgray
    overflow auto
    &:after
      display block
      content: ''
      width 0
      height 0
      bg-img('../../images/logo.png')
      text-align: center
      font-size: 24px
      color #000000
      opacity 0
      margin auto
      // margin-top: 50px
      margin-bottom: 0

.content_list
  height 92%
  padding .4rem .3rem /* 30/75 */
  overflow auto
  // margin-top 0.2rem
  .comment_box
    box-shadow 0 .24rem /* 18/75 */ .32rem /* 24/75 */ 0 rgba(241,241,241,0.44)
    border-radius .266667rem /* 20/75 */
    margin-bottom .286667rem /* 20/75 */
    .commtent_type
      padding .2rem .4rem
      font-size: $fs-m
      color $c_gray
    .comment_list
      margin-bottom 0.3rem
      border-radius .266667rem /* 20/75 */
      .comment_list_item
        margin-bottom 0.3rem
        .commtent_avatar
          .comment_link
            img 
              width .4rem /* 30/75 */
              height .373333rem /* 28/75 */
            span 
              font-size: .346667rem /* 26/75 */
              color $c_gray
        .text
          font-size 26px
          color: #333333
          padding .2rem 0
          text-align justify
        .reply_lists
          background:rgba(247,247,247,1);
          padding 16px
          .reply_list
            flex-center()
            justify-content flex-start
            font-size:26px;
            font-family:PingFang-SC-Medium;
            margin-top 6px
            text-align justify
            p
              color:rgba(92,135,235,1);
              align-self: flex-start
            span 
              flex 1
              em
                padding-left: 20px
                color:rgba(92,135,235,1);

.publish_comment_box
  position absolute
  bottom 0
  width 100%
  box-sizing border-box
  padding 0.3rem 0.5rem
  .publish_input
    width 92%
    height 80%
    font-size $fs-l
    border none
    &::placeholder
        color $c_gray
  .send-box
    width 1.866667rem /* 140/75 */
    height .72rem /* 54/75 */
    flex-center()
    background: linear-gradient(to right, #F77A54 , #FF635B)
    border-radius: .5rem
    font-size .4rem /* 24/75 */
    margin-left .2rem
