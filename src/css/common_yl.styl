// 搜索框
.search_box
  padding .306667rem /* 23/75 */ .346667rem /* 26/75 */
  box-shadow 0 .24rem /* 18/75 */ .32rem /* 24/75 */ 0 rgba(241,241,241,0.44)
  .search_content
    border-radius .666667rem /* 50/75 */
    height .933333rem /* 70/75 */
    padding 0 .266667rem /* 20/75 */
    img 
      width .4rem /* 30/75 */
      height @width
      margin-right.266667rem /* 20/75 */
    input 
      border none
      font-size $fs-m
      &::placeholder
        color $c_dgray
  .canel
    color #727373
    font-size $fs-l
    margin 0 .266667rem /* 20/75 */
    display none
    cursor pointer

// 动态Item
.list_item
  padding .68rem /* 51/75 */ .533333rem /* 40/75 */ .286667rem /* 29/75 */ .533333rem /* 40/75 */ 
  box-shadow 0 .24rem /* 18/75 */ .32rem /* 24/75 */ 0 rgba(241,241,241,0.44)
  border-radius .266667rem /* 20/75 */
  margin-bottom .286667rem /* 20/75 */
  .avatar_box
    .avatar
      width 1.12rem /* 84/75 */
      height @width
      border-radius 50%
      object-fit cover
    .avator_name_box
      padding 0 .266667rem /* 20/75 */
      .name_box
        h3
          font-size $fs-l
          font-weight:bold
        .tip
          width .906667rem /* 68/75 */
          height .426667rem /* 32/75 */
          flex-center()
          border-radius .4rem /* 30/75 */
          font-size $fs-xxs
          margin 0 .266667rem /* 20/75 */
      .time
        font-size $fs-s
  .list_text
    color #231815
    font-size $fs-s
    padding .266667rem /* 20/75 */ 0
    border-bottom solid 1px #f3f6f7
    .topic
      font-size $fs-l
      padding-top .533333rem /* 40/75 */
      span 
        padding-right .133333rem /* 10/75 */
    .list_videos
      position relative
      padding-top: .163333rem /* 10/75 */
      width 98%
      height 4.653333rem /* 349/75 */
      video 
        width 100%
        height 100%
        object-fit cover
      .playBtn
        width 1.066667rem /* 80/75 */
        height @width
        absolute-center()
        cursor pointer
    .list_imgs
      padding-top: .163333rem /* 10/75 */
      .list_imgs_item
        object-fit cover
        margin-right .133333rem /* 10/75 */
        margin-bottom 0.13rem
        &:only-child
          width 6.213333rem /* 466/75 */
          height 4.666667rem /* 350/75 */
        &:first-child:nth-last-child(2),&:first-child:nth-last-child(2) ~ .list_imgs_item,&:first-child:nth-last-child(4),&:first-child:nth-last-child(4) ~ .list_imgs_item
          width 4.0rem /* 466/75 */
          height 2.666667rem /* 350/75 */
        &:first-child:nth-last-child(3),&:first-child:nth-last-child(3) ~ .list_imgs_item
          width 2.593333rem /* 202/75 */
          height @width
        &:first-child:nth-last-child(5),&:first-child:nth-last-child(5) ~ .list_imgs_item
          width 2.593333rem /* 202/75 */
          height @width
    .addr
      align-items flex-start !important
      margin-top 20px
      .icon_addr
        width .4rem /* 30/75 */
        height @width 
        bg-img('../../images/civilizationCircle/icon_addr.png')
        margin .133333rem /* 10/75 */
        margin-left 0
        align-self: flex-start
      span 
        font-size $fs-s
        flex 1 !important;
  .action_bar
    margin-top .366667rem /* 20/75 */
    padding 0 .466667rem /* 20/75 */
    .action_item
      flex-center()
      img 
        width .4rem /* 30/75 */
        height @width
      span
        padding: 0 .133333rem /* 10/75 */


.video_mask_box
  position absolute
  top 0
  left 0
  width 100vw
  height 100vh
  background-color: rgba(1,1,1,.8)
  z-index 99
  display none
  .video_play_box
    position relative
    top 0
    left 0
    width 100%
    height 100%
    flex-center()
    video 
      max-width 94%
      max-height 90%
  
.imgs_mask_box
  position absolute
  top 0
  left 0
  width 100vw
  height 100vh
  background-color: rgba(1,1,1,.8)
  z-index 99
  display none
  .imgs_content_box
    position relative
    top 0
    left 0
    width 100%
    height 100%
    flex-center()
    .swiper-container
      width 100%
      height 100%
      .swiper-slide
        flex-center()
        img
          max-width 100%
          max-height 90%
      .swiper-pagination-bullet-active
          background #ffffff