@import '../tools.styl'
@import '../stylus/index.styl'
body,html
    height 100%
.content
    padding-top .32rem /* 24/75 */
    background #F7F7F7
    height 100%
    .swiper-container
        &>.swiper-wrapper
            text-align center
            &>.swiper-slide>a>img
                width 9.306667rem /* 698/75 */
                height 4.346667rem /* 326/75 */
    .deatilList
        background #ffffff
        width 8.293333rem /* 622/75 */
        margin 0 auto 
        padding 0 .48rem /* 36/75 */0 .52rem /* 39/75 */
        &>li
            height 1.56rem /* 117/75 */
            border-bottom 1px solid #F3F6F7
            display flex
            justify-content flex-start
            align-items center
            font-weight 500
            font-size .4rem /* 30/75 */
            .title
                color #333333
                margin-right .133333rem /* 10/75 */
            .text
                color #B2B2B2
                flex: 1;
                overflow: auto;
                max-height: 75%;
            &:last-child
                display block
                padding-top 20px
            .ctx
                overflow-x: hidden
                overflow-y: auto
                padding-top 20px