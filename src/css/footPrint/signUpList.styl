@import '../tools.styl'
@import '../stylus/index.styl'
.content
    min-height 100vh
    background #F7F7F7
    padding-top .266667rem /* 20/75 */
    .title
        width 9.36rem /* 702/75 */ 
        background transparent
        color #B2B2B2
        display flex
        justify-content space-around
        align-content center
        padding .266667rem /* 20/75 */ 0
        margin 0 auto 
        &>li
            flex 1
            text-align center
            &:nth-child(3)
                flex 0 0 .773333rem /* 58/75 */
                padding-right .266667rem /* 20/75 */
            &:nth-child(4)
                flex 0 0 2.586667rem /* 194/75 */
                padding-right .653333rem /* 49/75 */
            &:nth-child(5)
                flex 0 0 .8rem /* 60/75 */
                margin-right .533333rem /* 40/75 */
    .ctx
        width 9.36rem /* 702/75 */
        margin 0 auto
        background #ffffff
        border-radius .266667rem /* 20/75 */
        color #333333
        font-size .4rem /* 30/75 */
        &>li
            &>ul
                display flex
                justify-content space-around
                align-items center
                height 1.466667rem /* 110/75 */
                position relative
                &:after
                    content ' '
                    height 1px
                    width 8.293333rem /* 622/75 */
                    position absolute
                    background #F3F6F7
                    top 0
                    left .533333rem /* 40/75 */
                &>li
                    flex 1
                    text-align center
                    display flex
                    justify-content center
                    align-items center
                    i
                        margin-left .12rem /* 9/75 */
                    .man
                        icon_bg('../../images/footPrint/man_icon.png',.32rem /* 24/75 */)
                    .women
                        icon_bg('../../images/footPrint/woman_icon.png',.32rem /* 24/75 */)
                    a 
                        icon_bg('../../images/footPrint/callPhone_icon.png',.8rem /* 60/75 */)
                    &:nth-child(3)
                        flex 0 0 .773333rem /* 58/75 */
                        padding-right .266667rem /* 20/75 */
                    &:nth-child(4)
                        flex 0 0 2.586667rem /* 194/75 */
                        padding-right .653333rem /* 49/75 */
                    &:nth-child(5)
                        flex 0 0 .8rem /* 60/75 */
                        margin-right .533333rem /* 40/75 */