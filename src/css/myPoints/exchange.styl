@import '../stylus/index.styl'
.wrapper
  min-height: 100vh
  padding-bottom: 40px
  background-color: #F4F5F5
  background-image: url('../../images/myPoints/banner.png')
  background-repeat: no-repeat
  background-size: 100%
  overflow: hidden
  font-size: 0
  .points-wrapper
    margin: 88px 275px 0 275px
    text-align: center
    .points-value
      font-size: 88px
      font-weight: 600
      color: rgba(255, 255, 255, 1)
    .points-title
      font-size: 30px
      font-weight: bold
      color: rgba(255, 255, 255, 1)
  .exchange-wrapper
    margin: 67px 25px 0 25px
    min-height: 300px
    background: rgba(255, 255, 255, 1)
    box-shadow: 0px 18px 24px 0px rgba(241, 241, 241, 0.44)
    border-radius: 20px
    .exchange-checkbox
      display: flex
      border-bottom: 0.5px solid rgba(237, 237, 237, 1)
      .check-btn
        display: flex
        justify-content: center
        align-items: center
        width: 50%
        height: 90px
        font-size: 30px
        font-weight: bold
        color: rgba(51, 51, 51, 1)
        &:first-child
          border-radius: 20px 0px 0px 0px
        &:last-child
          border-radius: 0px 20px 0px 0px
        &.checked
          background: rgba(255, 231, 64, 1)
    .item-wrapper
      margin-top: 25px
      flex 1
      .title
        font-size: 30px
        font-weight: bold
        color: rgba(51, 51, 51, 1)
        single-line()
      .intro
        font-size: 24px
        font-weight: 500
        color: rgba(179, 179, 179, 1)
        margin-top: 10px
        word-break: break-all
        multi-line(2)
    .check-items
      padding: 0 40px
      .check-content
        padding: 40px 0
        display: flex
        border-bottom: 0.5px solid rgba(237, 237, 237, 1)
        &:last-child
          border-bottom: none
        .img-wrapper
          position: relative
          flex: 0 0 auto
          margin-right: 20px
          width: 150px
          height: 150px
          // background: rgba(255, 255, 255, 1)
          border: 2px solid rgba(0, 0, 0, 0.05)
          border-radius: 10px
          img
            width: 106px
            height: 112px
            border-radius: 10px
            absolute-center()
        .check-item
          margin-top: 25px
          flex: 0 0 140px
          text-align: center
          .check-points
            font-size: 22px
            font-weight: 600
            color: #333333
            text-align: center
            .red
              font-size: 30px
              font-weight: 700
              color: #F86C4F
          .btn-check
            margin-top: 10px
            full-img('../../images/myPoints/exchange.png')

// 蒙层
.mask_box
  position fixed
  width 100vw
  height 100vh
  top 0
  left 0
  background rgba(0, 0, 0, 0.5)
  display none
  .rule_box
    absolute-center()
    box-sizing border-box
    width 540px
    height 590px
    background rgba(255, 255, 255, 1)
    border-radius 20px
    padding 40px 43px
    flex-center()
    flex-direction column
    justify-content flex-start
    .img
      width: 160px
      height 160px
      &.suc
        bg-img('../../images/footPrint/suc_icon.png')
      &.fal
        bg-img('../../images/footPrint/fal_icon.png')
    h1
      font-size 40px
      font-family PingFang-SC-Bold
      font-weight bold
      color rgba(35, 35, 35, 1)
      line-height 20px
      text-align center
      margin-top 30px
    .text
      width 454px
      height 106px
      font-size 28px
      font-family PingFang-SC-Medium
      font-weight 500
      color rgba(159, 159, 159, 1)
      line-height 40px
      flex-center()
      flex-direction column
      text-align center
      margin-top 40px
    .know_btn
      width 376px
      height 80px
      background linear-gradient(86deg, rgba(246, 124, 85, 1) 0%, rgba(255, 97, 93, 1) 100%)
      border-radius 40px
      font-size 30px
      font-family PingFang-SC-Bold
      font-weight bold
      color rgba(255, 255, 255, 1)
      line-height 20px
      flex-center()
      margin-top 40px
    &.exChange
      .bottom_btn
        margin-top 40px
        width 376px
        height 80px
        bg-img('../../images/footPrint/isee_icon.png')

