@import '../tools.styl'
@import '../stylus/index.styl'
.content
    background #F7F7F7
    min-height 100vh
    border-top .013333rem /* 1/75 */solid transparent
    overflow auto
    .evaluateBox
        background #ffffff
        width 8.293333rem /* 622/75 */
        padding .533333rem /* 40/75 */
        margin .32rem /* 24/75 */auto 0
        border-radius .266667rem /* 20/75 */
        box-shadow 0px 18px 24px 0px rgba(241,241,241,0.44)
        .title
            height 1.44rem /* 108/75 */
            border-bottom .013333rem /* 1/75 */solid #F3F6F7
            font-size .4rem /* 30/75 */
            font-weight bold
            color #000000
            text-align center
            line-height 1.44rem /* 108/75 */
        .evaluate_list
            display flex
            flex-direction column
            justify-content flex-start
            align-items center
            .main_evaluate
                display flex
                flex-direction column
                align-items center
                justify-content flex-start
                margin-top .533333rem /* 40/75 */
                font-size .32rem /* 24/75 */
                font-weight bold
                color #333333
                width 6.826667rem /* 512/75 */
                .l_stars
                    display flex
                    justify-content space-between
                    margin-top .333333rem /* 25/75 */
                    i
                        margin-right .6rem /* 45/75 */
                        &:last-child
                            margin-right 0
                    .star
                        icon_bg('../../images/footPrint/star_l_icon.png',.8rem /* 60/75 */)
                    .unstar
                        icon_bg('../../images/footPrint/unstar_l_icon.png',.8rem /* 60/75 */)
            .other_evaluate
                display flex
                justify-content flex-start
                align-items center
                margin-top .56rem /* 42/75 */
                width 6.826667rem /* 512/75 */
                .evaluate_title
                    font-size .32rem /* 24/75 */
                    color #000000
                    margin-right .333333rem /* 25/75 */
                .s_stars
                    display flex
                    justify-content space-around
                    margin-right .266667rem /* 20/75 */
                    i
                        margin-right .4rem /* 30/75 */
                        &:last-child
                            margin-right 0
                    .star
                        icon_bg('../../images/footPrint/star_icon.png',.4rem /* 30/75 */)
                    .unstar
                        icon_bg('../../images/footPrint/unstar_icon.png',.4rem /* 30/75 */)
                .evaluate_text
                    color #B3B3B3
        .input_box
            width 7.626667rem /* 572/75 */
            margin-top .533333rem /* 40/75 */
            padding .333333rem /* 25/75 */
            border-radius .133333rem /* 10/75 */
            background #FAFAFA
            textarea
                width 100%
                height 1.6rem /* 120/75 */
                margin-bottom .133333rem /* 10/75 */
                background transparent
                border 0
                font-size 26px
                text-align: justify
                &::-wibket-input-placeholder
                    color #B2B2B2
            .addPic_box
                width 6rem
                max-height 4.5rem /* 150/75 */
                flex-center()
                flex-wrap wrap
                justify-content flex-start
                position relative
                overflow hidden
                .img_input
                    position relative
                    width 2rem /* 150/75 */
                    height 2rem /* 150/75 */
                    margin 10px 20px
                    overflow hidden
                    .closeImg
                        position absolute
                        width 38px
                        height 38px
                        top 0
                        right 0
                    img 
                        width 100%
                        height 100%
                        margin 0
                        object-fit: cover
                .addPic
                    position relative
                    margin 10px 20px
                    .add_bg
                        width 2rem /* 150/75 */
                        height 2rem /* 150/75 */
                    .add_icon
                        position absolute
                        width .613333rem /* 46/75 */
                        height .613333rem /* 46/75 */
                        left 50%
                        top .48rem /* 36/75 */
                        transform translateX(-50%)
                    span
                        text-align center
                        position absolute
                        bottom .293333rem /* 22/75 */
                        width 1.333333rem /* 100/75 */
                        left 50%
                        transform translateX(-50%)
                        color #B2B2B2
                        font-size .32rem /* 24/75 */
                input
                    visibility hidden
    button
        border 0
        outline none
        margin 1.006667rem /* 263/75 */auto 0
        margin-bottom: 30px
        icon_bg('../../images/footPrint/submit_icon.png',6.24rem /* 468/75 */, 1.093333rem /* 82/75 */)