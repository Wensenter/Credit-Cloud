@import '../tools.styl'
@import '../stylus/index.styl'
.content
    min-height 100vh
    background #F7F7F7
    border 1px solid transparent
    .children_tab
        display flex
        height 1.173333rem /* 88/75 */
        align-items center
        justify-content center
        background #ffffff
        color #000000
        font-size .4rem /* 30/75 */
        &>li
            padding .533333rem /* 40/75 */ .4rem /* 30/75 */.266667rem /* 20/75 */
        .active
            color #231815
            font-size .48rem /* 36/75 */     
            font-weight bold
            position relative
            padding-top .266667rem /* 20/75 */
            padding-bottom .133333rem /* 10/75 */
            &:after
                content ' '
                position absolute       
                left .82rem /* 61.5/75 */
                bottom 0
                width .533333rem /* 40/75 */
                height .08rem /* 6/75 */
                background #FF1D36
    .promising_list
        width 8.293333rem /* 622/75 */
        border-radius .266667rem /* 20/75 */
        margin .346667rem /* 26/75 */ auto .333333rem /* 25/75 */
        padding 0 .533333rem /* 40/75 */
        background #ffffff
        .promising_item
            width 8.293333rem /* 622/75 */
            padding .44rem /* 33/75 */0 /*43/75 */ .506667rem /* 38/75 */
            border-bottom 1px solid #F3F6F7
            .ctx
                display flex
                justify-content space-between
                align-items center
                .item_content
                    &>p
                        margin-bottom .16rem /* 12/75 */
                        font-weight 500
                        font-size 0
                        .educationActivities
                            icon_bg('../../images/civilizationSquare/educationActivities_icon.png',.666667rem /* 50/75 */)
                            display inline-block
                        .YoGa
                            icon_bg('../../images/civilizationSquare/YogaActivities_icon.png',.666667rem /* 50/75 */)
                            display inline-block
                        &>i 
                            vertical-align middle
                            margin-right .133333rem /* 10/75 */                    
                        .title
                            vertical-align middle
                            color #000000
                            font-size .373333rem /* 28/75 */
                        .text
                            vertical-align middle
                            display inline-block
                            margin-left .106667rem /* 8/75 */
                            font-size .373333rem /* 28/75 */
                            color #B2B2B2
                            width 2.666667rem /* 200/75 */
                            white-space nowrap
                            text-overflow ellipsis
                            overflow hidden
                    .evaluate
                        display flex    
                        justify-content flex-start
                        align-items center
                        .stars
                            display flex
                            i 
                                icon_bg('../../images/footPrint/evaluateClass_icon.png',.266667rem /* 20/75 */)
                                margin-left .28rem /* 21/75 */
                    .time
                        margin-left 1.573333rem /* 118/75 */
                .activePic
                    width 3.146667rem /* 236/75 */
                    height 2.466667rem /* 185/75 */
                    position relative
                    &>img
                        position absolute
                        top 0
                        left 0
                        width 100%
                        height 100%
                        border-radius .133333rem /* 10/75 */ 
                    i
                        position absolute
                        top 0
                        right 0
                    .toBeAudited
                        icon_bg('../../images/footPrint/toBeAudited_icon.png',1.386667rem /* 104/75 */,.64rem /* 48/75 */)
                    .processing
                        icon_bg('../../images/footPrint/processing_icon.png',1.386667rem /* 104/75 */,.64rem /* 48/75 */)
                    .end
                        icon_bg('../../images/footPrint/end_icon.png',1.386667rem /* 104/75 */,.64rem /* 48/75 */)
            .buttonList
                display flex
                justify-content center
                align-items center
                &>button
                    display block
                    width 1.866667rem /* 140/75 */
                    height .693333rem /* 52/75 */
                    outline none
                    border 0
                    margin-left .56rem /* 42/75 */ 
                .signUpList
                    icon_bg('../../images/footPrint/signUpList_icon.png', 2.133333rem /* 160/75 */,.693333rem /* 52/75 */)
                .evaluationByOthers
                    icon_bg('../../images/footPrint/evaluationByOthers_icon.png', 2.133333rem /* 160/75 */,.693333rem /* 52/75 */)
                .navigation
                    icon_bg('../../images/footPrint/navigation_icon.png',  1.866667rem /* 140/75 */,.693333rem /* 52/75 */)
                .signIn
                    icon_bg('../../images/footPrint/signIn_icon.png',  1.866667rem /* 140/75 */,.693333rem /* 52/75 */)    
                .goEvaluate
                    icon_bg('../../images/footPrint/goEvaluate_icon.png',  1.866667rem /* 140/75 */,.693333rem /* 52/75 */)
                .evaluated
                    icon_bg('../../images/footPrint/evaluated_icon.png',  1.866667rem /* 140/75 */,.693333rem /* 52/75 */)
.bg
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background rgba(0,0,0,0.5)
    display none
    .pop_wrapper
        width 7.2rem /* 540/75 */
        height 4.8rem /* 360/75 */
        border-radius .266667rem /* 20/75 */
        background #ffffff
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
        display flex
        flex-direction column
        justify-content flex-start
        align-items center
        .title
            font-size .533333rem /* 40/75 */
            color #232323
            font-weight bold
            margin-top .826667rem /* 62/75 */
        .tip
            color #9F9F9F
            font-size .32rem /* 24/75 */
            font-weight 500 
            margin-top .32rem /* 24/75 */
        button
            border 0
            outline none
            margin-top .546667rem /* 41/75 */
            icon_bg('../../images/footPrint/isee_icon.png',5.013333rem /* 376/75 */,1.093333rem /* 82/75 */)