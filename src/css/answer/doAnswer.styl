@import '../stylus/index.styl'
    body
        width 100vw
        height 100vh
        background #f44670
        overflow hidden !important
.wrapper
    position absolute
    top 0
    left 0
    width 100%
    height: 100%
    overflow hidden
    .bg
        width 100%
        min-height 17.76rem /* 1332/75 */
    .process
        position absolute
        top 4.666667rem /* 350/75 */
        left 1.333333rem /* 100/75 */
        color #f61c64
        font-size .426667rem /* 32/75 */
    .count
        position absolute
        top 4.666667rem /* 350/75 */
        right .96rem /* 72/75 */
        width .92rem /* 69/75 */
        height .92rem /* 69/75 */
        border-radius 50%
        background url('../../images/answer/count.png') no-repeat
        background-size 100% 100%
        text-align center
        line-height .92rem /* 69/75 */
        color #ffffff
        font-weight bold
        font-size .4rem /* 30/75 */
    .content
        position absolute
        top 6.253333rem /* 469/75 */
        left 50%
        height 7.413333rem /* 556/75 */
        overflow-y scroll
        transform translateX(-50%)
        width 7.36rem /* 552/75 */
        padding 0 .3rem
        box-sizing: border-box
        .title
            color #F61C64
            font-size .426667rem /* 32/75 */
            font-weight bold
            text-align: justify
        &>ul
            display flex
            flex-direction column
            justify-content center
            align-items center
            margin .52rem /* 39/75 */auto 0
            &>li
                width 5.08rem /* 381/75 */
                // height .96rem /* 72/75 */
                display flex
                justify-content space-around
                align-items center
                background #F3F3F3
                margin-bottom .36rem /* 27/75 */
                border-radius .133333rem /* 10/75 */
                color #E23062
                padding .2rem .4rem /* 30/75 */
                &.active
                    background url('../../images/answer/selected.png') no-repeat
                    background-size 100% 100%
                    color #fff
                &>span
                    flex 1
                    font-size 28px
                    text-align justify
                    line-height: 1.2
                &>img
                    width .56rem /* 42/75 */
                    height .56rem /* 42/75 */
        .next
            display block
            margin 0 auto
            width 5.853333rem /* 439/75 */
            height .973333rem /* 73/75 */
            background url('../../images/answer/next.png') no-repeat
            background-size 100% 100%
            border 0
            outline none
    .pop_2
        display none
        position absolute
        top 0
        left 0
        width 100vw
        height 100vh
        background rgba(0,0,0,0.5)
        overflow hidden
        .pop_bg
            position absolute
            top 0
            bottom 0
            left 0
            right 0
            margin auto
            width 540px
            height 509px
            background #ffffff
            border-radius 20px
            flex-center()
            flex-direction column
            justify-content flex-start
            .botLight
                width 6.2rem /* 465/75 */
                height 6.2rem /* 465/75 */
                margin-top -3rem
            .light
                width 4.066667rem /* 305/75 */
                height 4.053333rem /* 304/75 */
                margin-top -5.2rem
            h4
                color: #FE635C
                font-size: 46px
                font-weight: 500
            .congratulations
                width 7.2rem /* 540/75 */
                height 6.786667rem /* 509/75 */
                bottom 4.866667rem /* 365/75 */
                margin-top .2rem
            .text
                font-size .373333rem /* 28/75 */
                color #9F9F9F
                width 5.346667rem /* 401/75 */
                word-break break-word
                text-align justify
                margin-top .2rem
            .iSee
                width 5.013333rem /* 376/75 */
                height 1.093333rem /* 82/75 */
                margin-top .2rem