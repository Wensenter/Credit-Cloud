@import '../stylus/index.styl'
@import '../tools.styl'
.wrapper
  width 100vw
  height 100vh
  overflow hidden
  header
    width 100%
    height 4.96rem /* 372/75 */
    box-sizing border-box
    bg-img('../../images/personalCenter/headerIndex_bg.png')
    padding: .713333rem /* 61/75 */ .826667rem /* 62/75 */
    .name_box
      flex-center()
      justify-content flex-start
      .avatar
        width 1.333333rem /* 100/75 */
        height 1.333333rem /* 100/75 */
        border-radius 50%
        overflow hidden
        img 
          width 100%
          height 100%
          object-fit: cover
      .ul-items
        padding 0 .4rem
        .name
          font-size: $fs-xl
          font-weight:bolder
          img 
            width .4rem /* 30/75 */
            height .4rem /* 30/75 */
        .honor
          padding 0 .1rem
          width 1.893333rem /* 142/75 */
          height .533333rem /* 40/75 */
          border-radius .566667rem /* 20/75 */
          margin-top .1rem
          background:rgba(255,251,250,1);
          img 
            width .4rem /* 30/75 */
            height @width
            pointer-events none
            margin-right .05rem
          span 
            color #EB745C
            font-size: .266667rem /* 20/75 */
  .top_tab
    width 96%
    height 2.72rem /* 204/75 */
    margin auto
    margin-top -(@height/2)
    border-radius .266667rem /* 20/75 */
    box-shadow 0 .24rem /* 18/75 */ .32rem /* 24/75 */ 0 rgba(241,241,241,0.44)
    // height 80%
    .icon_item
      flex-center()
      flex-direction column
      .icon
        width 1.173333rem /* 88/75 */
        height 1.173333rem /* 88/75 */
        border-radius 50%
      &.integral
          .icon
            bg-img('../../images/personalCenter/integral.png')
      &.gift
          .icon
            bg-img('../../images/personalCenter/gift.png')
      &.footer
          .icon
            bg-img('../../images/personalCenter/footer.png')
      &.tree
          .icon
            bg-img('../../images/personalCenter/tree.png')
      &.suggest
          .icon
            bg-img('../../images/personalCenter/suggest.png')
      span 
        color #333333
        font-size: .32rem /* 24/75 */
        padding-top .2rem
  .content-box
    width 96%
    height 52%
    box-sizing border-box
    margin auto 
    border-radius .266667rem /* 20/75 */
    margin-top .4rem /* 30/75 */
    padding: 20px 44px
    overflow hide
    .content
      height 98%
      overflow auto
      padding-right .2rem
      .content-item
        position relative
        padding 0 0 43px 100px 
        &::before
          absolute: top 10px left 0
          content: ''
          width: 22px
          height: 22px
          bg-img('../../images/personalCenter/time_dot.png')
          border-radius: 50%
        &::after
          absolute: top 30px left 8px
          content: ''
          width: 3px
          height: 100%
          background: rgba(246,244,244,1)
          border-radius: 1px
        .time-box
          flex-center()
          justify-content flex-start
          img 
            width 80px
            height 32px
            margin-left 16px
        .text
          color: #231815
          font-size 30px
          padding: 20px 0
          text-align justify
        .topic
          font-size $fs-l
          padding-top .133333rem /* 40/75 */
          span 
            padding-right .133333rem /* 10/75 */
        .list_videos
          position relative
          padding-top: .163333rem /* 10/75 */
          width 98%
          height 294px
          video 
            width 100%
            height 100%
            object-fit cover
          .playBtn
            width 1.066667rem /* 80/75 */
            height @width
            absolute-center()
            cursor pointer
        .list_imgs
          padding-top: .163333rem /* 10/75 */
          .list_imgs_item
            object-fit cover
            margin-right .133333rem /* 10/75 */
            margin-bottom 0.13rem
            &:only-child
              width 4rem
              // height 4.666667rem /* 350/75 */
            &:first-child:nth-last-child(2),&:first-child:nth-last-child(2) ~ .list_imgs_item,&:first-child:nth-last-child(4),&:first-child:nth-last-child(4) ~ .list_imgs_item
              width 48%
              height 2.666667rem /* 350/75 */
            &:first-child:nth-last-child(3),&:first-child:nth-last-child(3) ~ .list_imgs_item
              width 30%
              height 150px
        .addr
          .icon_addr
            width .4rem /* 30/75 */
            height @width 
            bg-img('../../images/civilizationCircle/icon_addr.png')
            margin .133333rem /* 10/75 */
            margin-left 0
            span 
              font-size $fs-s

          




